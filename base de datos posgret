CREATE TABLE users (
    id SERIAL PRIMARY KEY,
    fullname VARCHAR(255),
    username VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL
);

-- Para PostgreSQL con bcrypt
INSERT INTO users (fullname, username, password) VALUES
('Juan Pérez', 'juanperez', '$2a$10$xyz123...'),
('María García', 'mariagarcia', '$2a$10$abc456...'),
('Carlos López', 'carloslopez', '$2a$10$def789...');

CREATE TABLE flights (
    id SERIAL PRIMARY KEY,
    departure_date VARCHAR(255) NOT NULL,
    departure_airport_code VARCHAR(10) NOT NULL,
    departure_airport_name VARCHAR(100),
    departure_city VARCHAR(50),
    departure_locale VARCHAR(50),
    arrival_date VARCHAR(255) NOT NULL,
    arrival_airport_code VARCHAR(10) NOT NULL,
    arrival_airport_name VARCHAR(100),
    arrival_city VARCHAR(50),
    arrival_locale VARCHAR(50),
    ticket_price INT,
    ticket_currency VARCHAR(3),
    flight_number INT NOT NULL,
    seat_capacity INT
);

