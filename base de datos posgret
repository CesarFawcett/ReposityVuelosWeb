

CREATE TABLE users (
    id SERIAL PRIMARY KEY,
    fullname VARCHAR(200) NOT NULL,
    username VARCHAR(100) NOT NULL,
    password VARCHAR(100) NOT NULL
);

CREATE TABLE flights (
    id SERIAL PRIMARY KEY,
    departure_date VARCHAR(50) NOT NULL,
    departure_airport_code VARCHAR(10) NOT NULL,
    departure_airport_name VARCHAR(100),
    departure_city VARCHAR(100),
    departure_locale VARCHAR(50),
    arrival_date VARCHAR(50),
    arrival_airport_code VARCHAR(10) NOT NULL,
    arrival_airport_name VARCHAR(100),
    arrival_city VARCHAR(100),
    arrival_locale VARCHAR(50),
    ticket_price INT,
    ticket_currency VARCHAR(20),
    flight_number INT,
    seat_capacity INT
);

CREATE TABLE bookings (
    id SERIAL PRIMARY KEY,
    status VARCHAR(20),
    flightId INT REFERENCES flights(id),
    checkedIn BOOLEAN,
    userId INT REFERENCES users(id),
    createdAt VARCHAR(50),
    bookingReference VARCHAR(50)
);
